#include <stdio.h>

int main(void) {
  int array[3][3];
  printf("The input elements in the matrix: \n");
  for(int i=0; i<3 ; i++)
  {
    for(int j=0; j<3 ; j++)
    {
      printf("element-[%d][%d] : ",i,j);
      scanf("%d", &array[i][j]);
    }
  }

  printf("The matrix is -\n");
  int sum = 0;

  for(int i=0; i<3 ; i++)
  {
    for(int j=0; j<3 ; j++)
    {
      printf("%d\t", array[i][j]);
      if( i == j )
        sum += array[i][i];
    }
    printf("\n");
  }
  printf("Sum of diagonal elements is - %d",sum);
  return 0;
}
